---
import { AstroFont } from 'astro-font'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <title>{title}</title>
    <AstroFont
      config={[
        {
          src: [],
          name: 'Azeret Mono',
          googleFontsURL:
            'https://fonts.googleapis.com/css2?family=Azeret+Mono:ital,wght@0,100..900;1,100..900&display=swap',
          preload: true,
          display: 'swap',
          selector: 'h1, h2, h3',
          fallback: 'monospace',
        },
      ]}
    />
  </head>
  <body class='w-screen overflow-x-hidden'>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --background: hsl(206, 10%, 10%);
    --foreground: hsl(206, 10%, 90%);
  }
</style>
