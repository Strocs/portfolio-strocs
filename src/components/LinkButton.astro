---
interface Props {
  class?: string;
  href: string;
}
const { class: customClass, href, ...props } = Astro.props;
---

<a
  href={href}
  class:list={[
    "bg-zinc-800/60 border border-zinc-200/10 rounded-lg flex justify-center items-center gap-x-2 py-1 px-2 md:py-2 md:px-4 text-xs md:text-base text-zinc-200 transition relative overflow-hidden after:content-[''] after:w-0 after:hover:w-full after:transition-[width] after:duration-200 after:absolute after:left-0 after:-z-10 after:h-full after:bg-zinc-600 after:blur-xl after:scale-125",
    customClass,
  ]}
  {...props}
  target="_blank"
  rel="noopener noreferrer"
>
  <slot /></a
>
