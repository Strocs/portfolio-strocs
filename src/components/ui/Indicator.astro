---
type Size = 'sm' | 'md' | 'lg'
interface Props {
  size?: Size
  class?: string
}

const { size = 'md', class: customClass } = Astro.props

const sizes: Record<Size, string> = {
  sm: 'w-3 h-4',
  md: 'w-4 h-5',
  lg: 'w-5 h-6',
}
---

<div class='inline-block w-8'>
  <span
    class:list={[
      sizes[size],
      'block shrink-0 bg-foreground opacity-20 [clip-path:polygon(0_0,0_100%,100%_50%)]',
      customClass,
    ]}></span>
</div>
