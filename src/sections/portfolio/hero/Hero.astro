---
import Title from '@/components/ui/Title.astro'
import Paragraph from '@/components/ui/Paragraph.astro'
import Badge from '@/components/ui/Badge.astro'
import PersonalImage from './components/PersonalImage.astro'
import ContactLinks from './components/ContactLinks.astro'
import { title, subTitle, OTWLabel, description } from './data/personal-info'
---

<div aria-hidden='true' class='-mb-52 -mt-10 grid min-h-screen items-center'>
  <header class='max-w-max'>
    <PersonalImage />
    <div aria-hidden='true' class='relative mb-6'>
      <Title as='h1' content={title} variant='xl' class='mb-2' />
      <Title as='h2' content={subTitle} />
      {
        OTWLabel && (
          <Badge
            label={OTWLabel}
            variant='lg'
            class='absolute right-0 top-1/4 rotate-12'
          />
        )
      }
    </div>
    <Paragraph variant='xl' content={description} />
    <ContactLinks />
  </header>
</div>
