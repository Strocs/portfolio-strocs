---
import Paragraph from '@/components/ui/Paragraph.astro'
import Indicator from '@/components/ui/Indicator.astro'
import Title from '@/components/ui/Title.astro'
import List from '@/components/ui/List.astro'

const { jobs } = Astro.props
---

<article class='grid max-w-max gap-4'>
  <header class='flex max-w-[660px] justify-between'>
    <div aria-hidden='true' class='flex items-center'>
      <Indicator />
      <Title variant='lg' as='h2' content={job.title} />
    </div>
    <p class='text-lg text-foreground'>
      {job.from} - {job.to}
    </p>
  </header>
  <Paragraph content={job.description} />
  <section class='grid gap-4'>
    <header class='ml-indent flex items-center'>
      <Indicator />
      <Title content='Trabajos realizados' as='h2' />
    </header>
    <List list={jobs} Item={JobsCard} />
  </section>
</article>
